{
  "name": "makecode-vscode",
  "version": "0.0.1",
  "description": "A VSCode extension for MakeCode",
  "engines": {
    "vscode": "^1.30.0"
  },
  "keywords": [
    "pxt",
    "MakeCode"
  ],
  "publisher": "MakeCode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/pxt-mkc"
  },
  "dependencies": {},
  "activationEvents": [
    "onCommand:makecode.create",
    "workspaceContains:./pxt.json"
  ],
  "main": "./built/vscode/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "makecode.build",
        "title": "Build MakeCode modules"
      },
      {
        "command": "makecode.simulate",
        "title": "Simulate MakeCode project"
      },
      {
        "command": "makecode.create",
        "title": "Create an empty MakeCode project"
      },
      {
        "command": "makecode.choosehw",
        "title": "Choose MakeCode hardware board"
      }
    ],
    "breakpoints": [
      {
        "language": "typescript"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == typescript",
          "command": "makecode.simulate",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.12.0",
    "@types/vscode": "^1.38.0",
    "typescript": "^3.6.3"
  }
}